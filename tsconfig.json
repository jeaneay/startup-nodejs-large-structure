{
    "compileOnSave": true,
    "extends": "@tsconfig/node12/tsconfig.json",    
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "dist",
      "target": "esnext",
      "strict": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "sourceMap": true,
      "skipLibCheck": true,
      "noEmitOnError": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "lib": [
          "esnext"
      ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "coverage", "dist", "seeds"]
}